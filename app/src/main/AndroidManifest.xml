<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions for file access -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme._25782__midterm">
        
        <!-- Main Activity - Launcher -->
        <activity
            android:name=".activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Manage Student Activity -->
        <activity
            android:name=".activities.ManageStudentActivity"
            android:exported="false"
            android:label="@string/title_manage_student"
            android:parentActivityName=".activities.MainActivity" />
        
        <!-- Manage Course Activity -->
        <activity
            android:name=".activities.ManageCourseActivity"
            android:exported="false"
            android:label="@string/title_manage_course"
            android:parentActivityName=".activities.MainActivity" />
        
        <!-- Enroll Student Activity -->
        <activity
            android:name=".activities.EnrollStudentActivity"
            android:exported="false"
            android:label="@string/title_enroll_student"
            android:parentActivityName=".activities.MainActivity" />
        
        <!-- View Enrollments Activity -->
        <activity
            android:name=".activities.ViewEnrollmentsActivity"
            android:exported="false"
            android:label="@string/title_view_enrollments"
            android:parentActivityName=".activities.MainActivity" />
        
    </application>

</manifest>